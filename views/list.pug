doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Document
    link(rel='stylesheet' href='./static/css/navbar.css')

    style.
      * {
      width: 100%;
      margin: 0 auto;
      }
      #loginmenu h3{
      padding-top: .5rem;
      color: #f2f2f2;
      background: black;
      border: black;
      }
      #loginmenu:hover{
      background: black;
      border: #000000;
      cursor:auto;
      }
      body{
      text-align:center;
      }
      
      .mainrow{
      background:rgb(223, 22, 79);
      border:1px solid rgb(223, 22, 79)
      }
      tr, td {
      border-bottom: 2px solid #ddd;
      }
      tr, td {
      padding: 15px;
      text-align: left;
      }
      tr, th {
      padding: 15px;
      text-align: left;
      }
      .title{
        color:rgb(223, 22, 79);
        padding:30px 0px;
      }
      .act{
        color:rgb(223, 22, 79);
      }
      .act:hover,.act:visited{
        color: purple ;
      }
  body
   #navbar.nav
     ul.nav.navbar-nav.navbar-right
       li
         a.menu(href='/') logout
   h1.title Bookings list
   table
      thead
      tr.mainrow
       th Name
       th Id
       th Email
       th Course
       th Date
       th Plan
       th Action 
       th Action
       
      tbody
       each Book in x
        tr
         td #{Book.name}
         td #{Book.Sid}
         td #{Book.email}
         td #{Book.course}
         td #{Book.date}
         td #{Book.plans}
         td
          a.act(href=`/student/${Book._id}`) view
         td
          a.act(href=`/x/student/${Book._id}` method="delete") delete
         
            
               
               
