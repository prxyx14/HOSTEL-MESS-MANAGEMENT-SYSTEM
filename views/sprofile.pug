doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title facultylogin
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
  style.
    #loginmenu{
    width:100px;
    }
    #navbar{
    display:inline-flex;
    width:100%;
    height:12vh;
    background:rgb(223, 22, 79);
    box-shadow: none;
    }
    #navbar a{
      padding:5px 8px;
      color:white;
      text-decoration:none;
      font-size:1.3rem;
      font-weight:500;
      margin-left:8%;
    }
    
    .details{
    display: flex;
    position: relative;
    flex-direction: column;
    justify-content: center;
    padding: 1rem 2rem;
    margin: 3% 10% 0 10%;
    border-radius: 10px;
    height: 70vh;
    z-index: -1;
    border: 5px solid rgb(223, 22, 79);
    box-shadow: 5px 10px 5px rgb(187, 187, 187);
    background:white;
    }
    .person-details{
    padding: 1% 2% 2% 2%;
    margin: auto;

    }
    .image{
    margin: 0 auto;
    display: block;
    height: 150px;
    width: 150px;
    }
    .image img{
    padding: 10px 0 0 0 ;
    position: inherit;
    height: 110px;
    width: 110px;
    }
nav#navbar
  a.back-btn(href='/' type='button' value='submit' method='POST') Home
section.details
  .person-details
    h4
      pre.
        NAME        : #{x.name}         
    h4
      pre.
        EMAIL       : #{x.email} 
    h4
      pre.
        DATE        : #{x.date} 
    h4
      pre.
        COURSE      : #{x.course}
    h4
      pre.
        Meal Plan   : #{x.plans}
 


   